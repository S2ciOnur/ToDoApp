<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mesut.todolist.ItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titel_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_titel"
                android:textSize="@dimen/headline_textSize" />

            <EditText
                android:id="@+id/title_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/desc_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_desc"
                android:textSize="@dimen/headline_textSize" />

            <EditText
                android:id="@+id/desc_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/prio_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_prio"
                android:textSize="@dimen/headline_textSize" />

            <Spinner
                android:id="@+id/prio_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
